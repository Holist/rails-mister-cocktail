<div class="wrapper">
  <div class="container">
    <div class="row">

    <% @cocktails.each do |cocktail|  %>

      <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card"
            style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
           url("<%= image_link(cocktail) %>")'>


            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2><%= cocktail.name.upcase.first(10) %> <%= "..." if cocktail.name.upcase.size > 10 %></h2>
              <p><%= cocktail.doses.count %> ingredients</p>
            </div>
            <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>


